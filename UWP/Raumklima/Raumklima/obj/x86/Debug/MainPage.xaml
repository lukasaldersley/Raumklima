<Page
    x:Class="Raumklima.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Raumklima"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Text="W-Seminar Projekt: Raumklima" BorderThickness="0" FontStyle="Italic" FontSize="20" FontWeight="Bold" Grid.Row="0" IsReadOnly="True" IsHitTestVisible="False"/>
        <TextBox Text="Bitte Bluetooth-Gerät auswählen" Grid.Row="1" IsReadOnly="True" IsHitTestVisible="False" BorderThickness="0"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='3' x:Name="FindDevicesButton" Content="Finde Geräte"                                 Grid.Column="0"/>
            <Button x:ConnectionId='4' x:Name="ConnectToDeviceButton" Content="Verbinde zum ausgewählten Gerät"                                     Grid.Column="2"/>
        </Grid>
        <ScrollViewer x:ConnectionId='1' x:Name="scroller" Grid.Row="4">
            <StackPanel x:ConnectionId='2' x:Name="stackPanel">
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

